{
	"extends": "@modern-js/tsconfig/base",
	"declaration": true,
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"isolatedModules": true
	},
	"include": [
		"src",
		"vitest.config.ts",
		"modern.config.ts",
		"runtime.ts",
		"component/*.ts",
		"config.ts"
	],
	"exclude": ["**/node_modules"]
}
